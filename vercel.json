{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "distDir": "backend/dist"
      }
    }
  ],
  "buildCommand": "npm run build",  
  "env": {
    "NODE_ENV": "production"
  }
}
